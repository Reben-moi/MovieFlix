@model IEnumerable<MovieFlix.Models.Movie>
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Movie List";
}
<div class="container-fluid">
    <div>
    <h2 class="text-white mb-4">Movies</h2>

    <p class="gap-4">
        <a asp-action="Create" class="btn btn-danger mb-4 ">
            <i class="bi bi-plus-circle me-1"></i> Add New Movie
        </a>  
        <a asp-controller="Genres" asp-action="Index" class="btn btn-warning mb-4">
            <i class="bi bi-collection-play me-1"></i> Manage Genres
        </a>

        @if (SignInManager.IsSignedIn(User) && User.IsInRole("SuperAdmin"))
        {
            <a asp-controller="AuditLog" asp-action="Index" class="btn btn-info mb-4">
                <i class="bi bi-journal-text me-1"></i> View  Logs
            </a>

        }
           
    </p>
    </div>

  

            <div class="row g-4 mb-4">
                @foreach (var movie in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 ">
                        <div class="movie-card">
                            <img src="@movie.ImageUrl" class="card-img-top" alt="@movie.Title" />
                            <div class="card-body d-flex flex-column">
                        <h5 class="card-title fs-5" style="color:#C3CBFF">@movie.Title</h5>
                                <div class="mt-auto d-flex gap-2 ">
                                    <a asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
        </div>
   </div>
